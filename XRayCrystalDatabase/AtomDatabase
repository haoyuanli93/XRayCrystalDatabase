import numpy as np


class Silicon:
    def __init__(self):
        self.m = 28.09  # atomic weight

        # Define properties for the unit cell
        self.a = 5.43095 / 1e4  # um
        self.b = self.a
        self.c = self.a
        self.volume = self.a * self.b * self.c

        # Atom positions
        self.atom_positions = [np.array([0., 0., 0.]),
                               np.array([0.25, 0.25, 0.25]) * self.a]
        
